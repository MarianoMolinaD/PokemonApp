<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Fondo principal de la CardView -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#03273A" /> <!-- Color de fondo de la CardView -->
            <corners android:radius="36dp" /> <!-- Opcional: Esquinas redondeadas -->
        </shape>
    </item>

    <!-- Borde solo en la parte superior -->
    <item android:top="36dp">
        <shape android:shape="rectangle">
            <solid android:color="#03273A" /> <!-- Color del borde -->
        </shape>
    </item>
</layer-list>
